<form action="http://localhost:3001/tags/rename/<%= params[:id] %>" method="post" class="mod-form">
  <div class="row">
    <div class="span12 span-md-12 span-lg-12 span-xs-12">
      <p class="heading"><%= t('.title') %></p>
      <%= label_tag :label, t('.attributs.label.to_s') %>
      <div class="error_messages warning label">
        <!-- Display errors using flash_messages helper -->
      </div>
      <%= text_field_tag :label, "", :placeholder => t('.attributs.label.placeholder') %>
    </div>
  </div>
    <div class="row">
      <div class="span12 span-md-12 span-lg-12 span-xs-12">
        <div class="mod-submit-wrap">
          <%= submit_tag t('common.rename'), :class => "mod-submit", :title => t('common.rename'), data: { disable_with: t("common.submitting") } %>
          <span><%= t('common.or') %></span>
          <input type="reset" class="reset md-close" value=<%= t('common.cancel') %> >
        </div>
      </div>
    </div>
</form>

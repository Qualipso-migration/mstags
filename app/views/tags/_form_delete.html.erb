<form action="http://localhost:3001/tags/delete/<%= params[:id] %>" method="post" class="mod-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="row">
    <div class="span12 span-md-12 span-lg-12 span-xs-12">
      <%= label_tag t('.confirm_delete') %>
    </div>
  </div>
  <div class="row">
    <div class="span12 span-md-12 span-lg-12 span-xs-12">
      <div class="mod-submit-wrap">
        <%= submit_tag I18n.t('common.delete'), :class => "mod-submit", :title => I18n.t('common.delete'), data: { disable_with: t("common.submitting") } %>
        <span><%= I18n.t('common.or') %></span>
        <input type="reset" value="<%= I18n.t('common.cancel') %>" class="reset md-close">
      </div>
    </div>
  </div>
</form>
<tr>
    <td valign="top" class="bodyContent">
      <h1><%= @title %></h1>
      <%= t('.reset_request') %>
    </td>
</tr>

<tr>
    <td valign="top" class="bodyContent">
      <a class="button" href="<%= edit_password_url(@resource, :reset_password_token => @token) %>"><%= t('.click_here') %></a>

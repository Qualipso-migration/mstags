
<section class="main">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class =>"form-login" } do |f| %>
  	<%= f.hidden_field :invitation_token %>
    <div class="picture_logo">
      <a href="#" title="Aller sur le site"><%= image_tag "login/logo.svg", :size => "156x156", :alt => "PYX4" %></a>
    </div>
    <h1><span class="sign-up"><%= t('.title') %></span></h1>
    <% if resource.errors.any? %>
        <div class="error_messages directory_name warning" style="display:block;" >
          <ul>
            <% resource.errors.each do |_attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p class="expand">
      <label for="password"><i class="fa fa-lock"></i><%= t('.your_pw') %></label>
      <%= f.password_field :password, :autofocus => true, :placeholder => t('.your_pw') %>
      <label for="password_confirmation"><i class="fa fa-lock"></i><%= t('.confirm_your_pw') %></label>
      <%= f.password_field :password_confirmation, :placeholder => t('.confirm_your_pw') %>
  	</p>

    <p class="clearfix">
      <%= f.submit t(".submit"),  :class => "log-reset"%>
    </p>
  <% end %>
</section>
